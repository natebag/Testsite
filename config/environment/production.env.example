# MLG.clan Production Environment Configuration
# Copy this file to .env and update with your production values

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=production
PORT=443
HOST=0.0.0.0
SERVER_NAME=mlg.clan

# ================================
# SSL/TLS CONFIGURATION
# ================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/mlg-clan.crt
SSL_KEY_PATH=/etc/ssl/private/mlg-clan.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt
FORCE_HTTPS=true

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://mlg_user:secure_password@db-cluster.mlg.clan:5432/mlg_clan_prod
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50
DATABASE_SSL_MODE=require
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=60000

# Redis Configuration
REDIS_URL=redis://redis-cluster.mlg.clan:6379
REDIS_PASSWORD=secure_redis_password
REDIS_CLUSTER_MODE=true
REDIS_MAX_CONNECTIONS=100

# ================================
# SOLANA BLOCKCHAIN CONFIGURATION
# ================================
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
MLG_TOKEN_MINT=YourActualTokenMintAddressHere
SOLANA_COMMITMENT_LEVEL=confirmed

# Program IDs (replace with actual deployed program addresses)
VOTING_PROGRAM_ID=YourVotingProgramIDHere
CLAN_PROGRAM_ID=YourClanProgramIDHere

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=your-super-secure-jwt-secret-key-min-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-256-bits
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=14
PASSWORD_MIN_LENGTH=12

# Session Configuration
SESSION_SECRET=your-ultra-secure-session-secret-min-512-bits
SESSION_TIMEOUT=3600000
SECURE_COOKIES=true

# MFA Configuration
MFA_ISSUER=MLG.clan
MFA_WINDOW=2

# ================================
# RATE LIMITING CONFIGURATION
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BURST_MULTIPLIER=2

# Gaming-specific rate limits
VOTING_RATE_LIMIT=10
CLAN_ACTION_RATE_LIMIT=20
CONTENT_UPLOAD_RATE_LIMIT=5

# ================================
# MONITORING & LOGGING
# ================================
# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# LogRocket Configuration
LOGROCKET_APP_ID=your-logrocket-app-id
LOGROCKET_ENABLED=true

# Winston Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/mlg-clan/application.log
LOG_ERROR_FILE_PATH=/var/log/mlg-clan/error.log
LOG_MAX_SIZE=20971520
LOG_MAX_FILES=10

# ================================
# CDN & STATIC ASSETS
# ================================
CDN_URL=https://cdn.mlg.clan
STATIC_ASSETS_URL=https://assets.mlg.clan
IMAGE_UPLOAD_BUCKET=mlg-clan-images-prod
VIDEO_UPLOAD_BUCKET=mlg-clan-videos-prod

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mlg-clan-storage-prod

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_HOST=smtp.mailgun.com
SMTP_PORT=587
SMTP_USER=postmaster@mg.mlg.clan
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@mlg.clan

# ================================
# SECURITY HEADERS & CSP
# ================================
CSP_ENABLED=true
CSP_REPORT_URI=https://api.mlg.clan/security/csp-report
CSP_REPORT_ONLY=false

HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# ================================
# PERFORMANCE & CACHING
# ================================
CACHE_TTL_DEFAULT=3600
CACHE_TTL_STATIC=86400
CACHE_TTL_API=300

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024

# ================================
# LOAD BALANCING & SCALING
# ================================
CLUSTER_MODE=true
CLUSTER_WORKERS=auto
LOAD_BALANCER_IP=10.0.1.100
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# ================================
# BACKUP & DISASTER RECOVERY
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mlg-clan-backups-prod

# ================================
# ANALYTICS & METRICS
# ================================
ANALYTICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60
PERFORMANCE_MONITORING=true

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Custom Analytics
ANALYTICS_API_KEY=your-analytics-api-key

# ================================
# GDPR & PRIVACY COMPLIANCE
# ================================
GDPR_ENABLED=true
PRIVACY_POLICY_URL=https://mlg.clan/privacy
TERMS_OF_SERVICE_URL=https://mlg.clan/terms
COOKIE_CONSENT_REQUIRED=true

# ================================
# GAMING-SPECIFIC CONFIGURATION
# ================================
# Tournament Configuration
TOURNAMENT_CREATION_ENABLED=true
MAX_CLAN_SIZE=50
MAX_VOTING_POWER=1000

# Content Moderation
AUTO_MODERATION_ENABLED=true
CONTENT_REVIEW_REQUIRED=true
NSFW_DETECTION_ENABLED=true

# ================================
# DEVELOPMENT & DEBUG (Disable in Production)
# ================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
API_DOCUMENTATION_ENABLED=false
PROFILING_ENABLED=false

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Discord Integration
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token

# Twitch Integration
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# ================================
# FEATURE FLAGS
# ================================
FEATURE_CLAN_TOURNAMENTS=true
FEATURE_ADVANCED_VOTING=true
FEATURE_CONTENT_CREATOR_REWARDS=true
FEATURE_MOBILE_APP_INTEGRATION=true
FEATURE_WEB3_WALLET_CONNECT=true

# ================================
# EMERGENCY CONTROLS
# ================================
EMERGENCY_MODE=false
MAINTENANCE_MODE=false
RATE_LIMIT_EMERGENCY_MULTIPLIER=10