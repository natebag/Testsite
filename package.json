{
  "name": "mlg-clan-platform",
  "version": "1.0.0",
  "description": "MLG.clan gaming platform with blockchain integration and comprehensive authentication",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:frontend": "vite --config build/vite.config.js",
    "build": "npm run type:check && node build/build.js",
    "build:vite": "npm run type:check && vite build --config build/vite.config.js",
    "build:types": "tsc --project build/tsconfig.build.json",
    "preview": "vite preview --config build/vite.config.js",
    "build:analyze": "ANALYZE=true vite build --config build/vite.config.js",
    "audit:performance": "node scripts/performance-audit.js",
    "type:check": "node scripts/validate-types.js",
    "type:check:full": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch",
    "type:generate": "npm run build:types",
    "type:validate": "node scripts/validate-types.js",
    "lint:types": "tsc --noEmit --pretty",
    "test": "jest --config config/jest.config.cjs",
    "test:watch": "jest --config config/jest.config.cjs --watch",
    "test:coverage": "jest --config config/jest.config.cjs --coverage",
    "test:auth": "jest --config config/jest.config.cjs src/core/auth/auth.test.js",
    "test:integration": "node run-integration-tests.js",
    "test:headless": "HEADLESS=true node run-integration-tests.js",
    "test:ci": "npm install && npm run type:check && npm run test && npm run test:headless",
    "test:cors": "node test-cors-configuration.js",
    "start:frontend": "node temp-server.js",
    "start:demo": "cd demo && node server.js",
    "serve": "python -m http.server 8080",
    "db:migrate": "node src/core/database/migrations/migration-runner.js",
    "db:seed": "node src/core/database/seeds/development-seed.sql"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/wallet-adapter-phantom": "^0.9.24",
    "@solana/web3.js": "^1.87.6",
    "bcryptjs": "^2.4.3",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "puppeteer": "^21.5.2",
    "qrcode": "^1.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^4.6.12",
    "speakeasy": "^2.0.0",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "cssnano": "^7.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "supertest": "^6.3.3",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vite-bundle-analyzer": "^1.2.1",
    "vite-plugin-html": "^3.2.2"
  },
  "keywords": [
    "testing",
    "integration",
    "puppeteer",
    "web3",
    "gaming"
  ],
  "author": "MLG.clan Development Team",
  "license": "MIT"
}
