# MLG.clan Platform Environment Configuration

# Solana Network Configuration
REACT_APP_SOLANA_NETWORK=mainnet-beta
REACT_APP_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
REACT_APP_SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# MLG Token Configuration (Real deployed contract)
REACT_APP_MLG_TOKEN_ADDRESS=7XJiwLDrjzxDYdZipnJXzpr1iDTmK55XixSFAa7JgNEL

# Environment Settings
REACT_APP_ENVIRONMENT=development
NODE_ENV=development

# Platform Configuration
REACT_APP_PLATFORM_NAME=MLG.clan
REACT_APP_VERSION=1.0.0

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_WS_BASE_URL=ws://localhost:3000

# Wallet Configuration
REACT_APP_WALLET_AUTO_CONNECT=false
REACT_APP_WALLET_LOCAL_STORAGE_KEY=mlg_clan_wallet_adapter

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_SHOW_CONSOLE_LOGS=true
REACT_APP_ENABLE_TEST_MODE=true

# Feature Flags
REACT_APP_ENABLE_VOTING=true
REACT_APP_ENABLE_BURN_VOTES=true
REACT_APP_ENABLE_CLAN_SYSTEM=true
REACT_APP_ENABLE_ACHIEVEMENTS=true
REACT_APP_ENABLE_LEADERBOARDS=true

# Performance Settings
REACT_APP_CACHE_TTL=300000
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_REQUEST_TIMEOUT=30000

# Security Settings (Use secure values in production)
REACT_APP_ENCRYPTION_KEY=dev_key_change_in_production
REACT_APP_SESSION_TIMEOUT=3600000